include ../includes/header.pug
+logoGrey()
label Text field
+textInput('Email')
br
label dropdown
+dropdown(3, 'взрослые', 'дети', 'младенцы')
br
label Masked text field
+maskedText()
br
label date dropdown
+date('Date dropdown', 'Date dropdown')
br
label filter date dropdown
+dateFilter()
label subscribe text field
+subscrTextField('Email')
br
label checkbox buttons
+checkBoxBtns(chckBtns, 'checkBoxButtons')
br
label expandable checkbox
+checkboxList(chckBox, 'list')
br
label radio buttons
+radioBtns(radioBtns, 'radio')
br
label toggle
+toggleSwitch('Получать спецпредложения', 'get')
br
label like button
+likeBtn(10)
br
label rate button
+rateBtns(second)
br
label rich checkbox button
+richCheckboxBtns(richCheckbox, 'richCheckBoxButtons')
br
label bullet list
+bulletList('bullets list', bullets)
br
label filled button
.filled-button
	+filledBtn('click me')
br
label border button
.border-button
	+borderBtn('click me')
br
label text button
+textBtn('click me')
br
label long button
+longBtn('click me')
br
label pagination
+pagination()
br
label range slider
+rangeSlider()
br
label comment
+comment('./assets/img/image.png', 'Мурад Сарафанов', '5 дней назад', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
br
label advantages
+advantages(advantages)
.colors
	each el in colors
		.colors-item
			.colors-block(style=el.style)
			.colors-description
				h2.colors-heading #{el.heading}
				p.colors-text #{el.text}
.type
	.type-item
		.type-tag
			.type-tag-h1 H1
		.type-description
			h1.type-description-text This one is the sub-section or widget title
	.type-item
		.type-tag
			.type-tag-h2 H2
		.type-description
			h2.type-description-text Next one is the item title inside widgets
	.type-item
		.type-tag
			.type-tag-h3 H3
		.type-description
			h3.type-description-text This is a label or CTA text
	.type-item
		.type-tag
			.type-tag-body Body
		.type-description
			body.type-description-text This is the body text which is used for most of the design, like paragraphs, lists, etc.
+calendar()
