						+roomDescr('./assets/img/room4.jpg', '856', '19')
					.main-content__rooms-line-item
						+roomDescr('./assets/img/room5.jpg', '740', '44')
					.main-content__rooms-line-item
						+roomDescr('./assets/img/room6.jpg', '982', '56')
				.main-content__main-rooms-line
					.main-content__rooms-line-item
						+roomDescr('./assets/img/room7.jpg', '678', '45')
					.main-content__rooms-line-item
						+roomDescr('./assets/img/room8.jpg', '450', '39')
					.main-content__rooms-line-item
						+roomDescr('./assets/img/room9.jpg', '350', '77')
