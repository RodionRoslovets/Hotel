include ./checkhField/checkField.pug

mixin checkboxList(arr, name, text)
	.checkbox-list-wrapper
		.checkbox-list__head
			h3.checkbox-list__head-heading #{text}
			.checkbox-list__head-arrow
				i.material-icons.checkbox-list__head-arrow-icon expand_more
		.checkbox-list__list
			each el in arr
				.checkbox-list__list-item
					+checkField(el.checkProps, checkFieldsName)
					.checkbox-list__item-description
						p #{el.val}