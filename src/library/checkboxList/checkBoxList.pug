mixin checkboxList(arr, name, text)
	.checkbox-list
		.checkbox-list--wrapper
			h3.checkbox-list--description #{text}
			.checkbox-list--arrow
				i.material-icons.checkbox-list--arrow-icon expand_more
		.checkbox-list--list
			each el in arr
				.checkbox-list--list-item
					input(type="checkbox", id=el.name, value=el.val, name=name, style="display:none;")
					label.list-item-chek(for=el.name)
						svg.list-item-chek--checked(width="10", height="10", viewBox="0 0 10 10", fill="none", xmlns="http://www.w3.org/2000/svg")
							path(d="M1.46439 4.29245L5.70703 8.53509L4.29282 9.9493L0.0501771 5.70666L1.46439 4.29245Z", fill="url(#paint0_linear)")
							path(d="M8.53546 2.87823L9.94967 4.29245L4.29282 9.9493L2.8786 8.53509L8.53546 2.87823Z", fill="url(#paint1_linear)" )
							defs
								linearGradient(id="paint0_linear", x1="7.82835", y1="2.17112", x2="2.1715", y2="7.82798", gradientUnits="userSpaceOnUse")
									stop(stop-color="#BC9CFF")
									stop(offset="1", stop-color="#8BA4F9")
								linearGradient(id="paint1_linear", x1="7.82835", y1="2.17112", x2="2.1715", y2="7.82798", gradientUnits="userSpaceOnUse")
									stop(stop-color="#BC9CFF")
									stop(offset="1", stop-color="#8BA4F9")
					.list-item-description
						p #{el.val}