mixin comment(imgSrc, authorName, daysAgo, text, likeNum)
	.comment
		.comment-wrapper
			.comment-author
				.author-avatar
					img(src=imgSrc, alt="")
				.comment-like
					+likeBtn(likeNum)
				
			.comment-content
				.author-data
					.author-name
						p #{authorName}
					.author-comment-date
						p #{daysAgo}
				.comment-text
					p #{text}